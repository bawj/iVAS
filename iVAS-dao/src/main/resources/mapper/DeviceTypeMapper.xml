<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yn.electricity.mapper.DeviceTypeMapper">

    <resultMap id="BaseResultMap" type="com.yn.electricity.dao.DeviceTypeDAO">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="type" property="type" jdbcType="VARCHAR"/>
        <result column="sport" property="sport" jdbcType="INTEGER"/>
        <result column="create_Time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>


    <select id="selectByDeviceType" resultType="com.yn.electricity.dao.DeviceTypeDAO">
        select *
        from device_type
        where type not like CONCAT('%', 'Platform', '%')
    </select>


    <select id="selectByPlatformType" resultType="com.yn.electricity.dao.DeviceTypeDAO">
        select *
        from device_type
        where type like CONCAT('%', 'Platform', '%')
    </select>

</mapper>